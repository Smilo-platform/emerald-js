    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "jest": "^24.7.1",
    "jest-canvas-mock": "^2.0.0-beta.1",
    "jest-environment-jsdom": "^24.7.1",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^2.6.2",
    "storybook-addon-jsx": "^6.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "3.4.2"
  },
  "dependencies": {
    "@emeraldplatform/contracts": "^0.5.0-rc.0",
    "@emeraldplatform/eth": "^0.5.0-rc.2",
    "@emeraldplatform/eth-rpc": "^0.5.0-rc.4",
    "@emeraldplatform/rpc": "^0.5.0-rc.4",
    "@emeraldplatform/ui": "^0.5.0-rc.4",
    "@emeraldplatform/ui-icons": "^0.5.0-rc.4",
    "@emeraldplatform/vault": "^0.5.0-rc.4",
    "@material-ui/core": "^4.0.0-rc.0",
    "classnames": "^2.2.6",
    "copy-to-clipboard": "^3.0.8",
    "qs": "^6.5.2",
    "react": "^16.8.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
